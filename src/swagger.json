{
  "swagger": "2.0",
  "info": {
    "title": "Docs for my test app",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/listing": {
      "post": {
        "summary": "Додати новий листинг",
        "parameters": [
          {
            "name": "car",
            "in": "body",
            "description": "Дані про новий автомобіль",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 3,
                  "example": "Toyota Camry",
                  "description": "Назва автомобіля"
                },
                "description": {
                  "type": "string",
                  "example": "Дуже надійний та економічний автомобіль",
                  "description": "Опис автомобіля"
                },
                "ownerName": {
                  "type": "string",
                  "example": "Іван Петров",
                  "description": "Ім'я власника"
                },
                "phoneNumber": {
                  "type": "string",
                  "minLength": 6,
                  "example": "123456789",
                  "description": "Номер телефону власника"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Успішно додано"
          }
        }
      }
    },
    "/api/listing/all": {
      "get": {
        "summary": "Отрмати всі листинг",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Номер сторінки",
            "required": false,
            "type": "integer",
            "default": 0
          },
          {
            "name": "perPage",
            "in": "query",
            "description": "Кількість елементів на сторінці",
            "required": false,
            "type": "integer",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "Список листингів отриманий успішно"
          }
        }
      }
    },
    "/api/listing/{autoId}": {
      "get": {
        "summary": "Отримати інформацію про конкретний запис",
        "parameters": [
          {
            "name": "autoId",
            "in": "path",
            "description": "Ідентифікатор",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Інформація про автомобіль отримана успішно"
          }
        }
      }
    },
    "/api/statistic/": {
      "post": {
        "summary": "Додати статистику лістингу",
        "parameters": [
          {
            "name": "statistics",
            "in": "body",
            "description": "Дані про статистику",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "watch",
                    "goal"
                  ],
                  "description": "Тип події (watch - перехід на сторінку або goal - клік на мобільний)"
                }
              }
            }
          },
          {
            "name": "autoId",
            "in": "path",
            "description": "Ідентифікатор",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Статистика автомобіля додана успішно"
          }
        }
      }
    },
    "/api/statistic/{autoId}": {
      "get": {
        "summary": "Отримати статистику лістингу",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "Тип події (watch - перехід на сторінку або goal - клік на мобільний)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "watch",
                "goal",
                ""
              ]
            }
          },
          {
            "name": "autoId",
            "in": "path",
            "description": "Ідентифікатор",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Статистика додана успішно отримана"
          }
        }
      }
    }
  }
}
